<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.jetti.flight.Reservation" table="Flight">
      <meta attribute="class-description">
         This class contains the flight detail. 
      </meta>
      <id name="reservationId" type="int" column="reservationid">
         <generator class="native"/>
      </id>
      <property name="time" column="time" type="long"/>
      <property name="username" column="username" type="string"/>
      <property name="flightNo" column="flightNo" type="int"/>
      <property name="noOfTickets" column="noOfTickets" type="int"/>
    
  
   </class>

</hibernate-mapping>